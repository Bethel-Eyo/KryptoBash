<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:layout_width="wrap_content" android:layout_height="wrap_content" android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/accent" />

            <solid android:color="#96ffffff" />
            <corners android:radius="8dp" />
            <padding android:bottom="12dp" android:left="8dp" android:right="8dp" android:top="12dp" />
        </shape>
    </item>


</selector>